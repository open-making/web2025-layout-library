---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="My website description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: system-ui, sans-serif;
				background: white;
			}

			.container {
				display: flex;
				min-height: 100vh;
				gap: 20px;
				padding: 20px;
			}

			.main-content {
				flex: 1;
				background: #f8f9fa;
				color: #333;
				padding: 40px;
				border-radius: 12px;
				border: 2px solid #333;
				min-height: 200vh;
			}

			.sidebar {
				width: 300px;
				background: #f8f9fa;
				color: #333;
				padding: 40px;
				border-radius: 12px;
				border: 2px solid #333;
				position: sticky;
				top: 20px;
				height: fit-content;
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 18px;
			}

			@media (max-width: 768px) {
				.container {
					flex-direction: column;
				}

				.sidebar {
					width: 100%;
					position: static;
					order: -1;
				}
			}
		</style>
	</head>
	<body>
		<div class="container">
			<main class="main-content">
				<slot name="main">Main Content</slot>
			</main>
			<aside class="sidebar">
				<slot name="sidebar">Sidebar</slot>
			</aside>
		</div>
	</body>
</html>
